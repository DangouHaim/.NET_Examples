@using TicketManagement.ASP.Views.Account;
@using LangUs = TicketManagement.ASP.Views.UserPage.Lang;

<h2>@Lang.ChangePassword</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    <input type="password" placeholder=@Lang.CurrentPassword name="password" />
    <input type="password" placeholder=@Lang.NewPassword name="newPassword" />
    <input type="submit" value=@LangUs.Submit />
}