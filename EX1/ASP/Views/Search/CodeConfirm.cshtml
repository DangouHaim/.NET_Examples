@using PandaWiki.Views.Account;

@model PandaWiki.Models.CodeConfirmModel

@{
    /**/

    ViewBag.Title = "Подтверждение";
}

@Html.Partial("_Head")
@Html.Partial("_HeaderEmpty")

<main class="page">
    <h2 class="text-center">Введите код подтверждения Telegram для поиска через него</h2>
    <hr />
    @using (Html.BeginForm("CodeConfirm", "Search", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="login-register-form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Code, "Код подтверждения", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

            <input type="submit" value="Подтвердить" class="btn btn-default" />
        </div>
    }
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
